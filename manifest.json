{
    "name": "Stock Indicator",
    "version": "1.0",
    "description": "Blended Value Stock Indicator",
    "manifest_version": 2,
    "content_scripts": 
    [
	  {
	    "matches": ["<all_urls>"],
	    "js": ["jquery-2.2.4.min.js","content.js"]
	  }
	],
	"browser_action": 
	{
		"default_icon": "icon.png"
	},
	"background": 
	{
		"scripts": ["background.js"],
		"persistent": true
	},
	"permissions": 
	[
	    "https://*/*",
	    "http://*/*",
	    "tabs",
	    "webRequest",
	    "webRequestBlocking"
  	]
}